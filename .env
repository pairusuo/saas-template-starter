# Development Environment Variables
# Copy this file to .env.local for local development

# ================================
# REQUIRED VARIABLES
# ================================

# Database Connection (Development)
DATABASE_URL="postgresql://username:password@localhost:5432/saas_template"

# NextAuth.js Configuration (Development)
# Secret can be generated with `openssl rand -base64 32`
NEXTAUTH_SECRET="KhHQitlTvjeP/5kNAS7ZxQd0Y4g88b6oKOj51rS6SJw="
NEXTAUTH_URL="http://localhost:3000"

# NextAuth Debug Mode (uncomment to enable detailed auth logs)
# AUTH_DEBUG="true"

# ================================
# AUTHENTICATION PROVIDERS
# ================================

# Google OAuth (Get from: https://console.cloud.google.com/)
# Create OAuth 2.0 Client ID, add callback: http://localhost:3000/api/auth/callback/google
# 请替换为你的真实Google OAuth凭据
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (Get from: GitHub Settings > Developer settings > OAuth Apps)
# Create OAuth App, set callback: http://localhost:3000/api/auth/callback/github
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ================================
# PAYMENT INTEGRATION
# ================================

# Stripe Configuration (Get from: https://dashboard.stripe.com/)
# Use test keys for development
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ================================
# EMAIL SERVICE
# ================================

# Resend (Recommended - Get from: https://resend.com/)
# Leave empty to disable email features in development
RESEND_API_KEY=""

# SMTP Configuration (Alternative - for development testing)
# Use Mailhog or similar for local email testing
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASSWORD=""

# ================================
# FILE STORAGE
# ================================

# Supabase Storage (Get from: https://supabase.com/)
# Create project and get keys from Settings > API
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# AWS S3 (Alternative storage option)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_BUCKET_NAME=""

# ================================
# CACHING & PERFORMANCE
# ================================

# Redis Cache (Optional - for development caching)
# Install Redis locally or use Docker
REDIS_URL="redis://localhost:6379"

# Upstash Redis (Alternative - Get from: https://upstash.com/)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# ================================
# ANALYTICS & MONITORING
# ================================

# Google Analytics (Optional - Get from: https://analytics.google.com/)
# Create a GA4 property and get your Measurement ID (format: G-XXXXXXXXXX)
NEXT_PUBLIC_GA_ID=""

# PostHog Analytics (Optional - Get from: https://posthog.com/)
POSTHOG_KEY=""

# Sentry Error Monitoring (Optional - Get from: https://sentry.io/)
SENTRY_DSN=""

# Datadog Monitoring (Optional - Get from: https://www.datadoghq.com/)
DATADOG_API_KEY=""

# ================================
# APPLICATION CONFIGURATION
# ================================

# App Metadata (Development)
APP_NAME="My SaaS App (Dev)"
APP_DESCRIPTION="Development version of My SaaS App"
APP_URL="http://localhost:3000"

# Environment Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_ENV="development"

# ================================
# SECURITY & LICENSE
# ================================

# License Protection (Development - can be left empty)
LICENSE_SERVER_URL=""
LICENSE_PUBLIC_KEY=""

# Encryption Key (32+ characters - use any string for development)
ENCRYPTION_KEY="dev-encryption-key-32-chars-minimum"

# ================================
# CDN & OPTIMIZATION
# ================================

# CDN Configuration (Optional - usually not needed in development)
NEXT_PUBLIC_CDN_URL=""

# Image Domains (for Next.js Image optimization)
NEXT_PUBLIC_IMAGE_DOMAINS="localhost"